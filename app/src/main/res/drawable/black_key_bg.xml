<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Matte + gloss gradient -->
    <gradient
        android:startColor="#2B2B2B"
        android:endColor="#000000"
        android:angle="90"/>

    <!-- Soft border -->
    <stroke
        android:width="0.5dp"
        android:color="#111111"/>

    <!-- Rounded corners -->
    <corners
        android:radius="6dp"/>

    <!-- Inner padding for depth -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="2dp"/>

</shape>
