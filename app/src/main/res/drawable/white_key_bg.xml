<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft piano gradient -->
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#E8E8E8"
        android:angle="90"/>

    <!-- Thin realistic border -->
    <stroke
        android:width="1dp"
        android:color="#F5F5F5"/>

    <!-- Rounded edges -->
    <corners
        android:radius="7dp"/>

    <!-- Bottom depth illusion -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="3dp"/>

</shape>
