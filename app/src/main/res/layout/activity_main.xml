<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/piano_bg"
    android:splitMotionEvents="true">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#111111"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- NOTE SCROLL (LEFT SIDE) -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button style="@style/NoteButton" android:id="@+id/btnC"  android:text="C"/>
                <Button style="@style/NoteButton" android:id="@+id/btnCs" android:text="C#"/>
                <Button style="@style/NoteButton" android:id="@+id/btnD"  android:text="D"/>
                <Button style="@style/NoteButton" android:id="@+id/btnDs" android:text="D#"/>
                <Button style="@style/NoteButton" android:id="@+id/btnE"  android:text="E"/>
                <Button style="@style/NoteButton" android:id="@+id/btnF"  android:text="F"/>
                <Button style="@style/NoteButton" android:id="@+id/btnFs" android:text="F#"/>
                <Button style="@style/NoteButton" android:id="@+id/btnG"  android:text="G"/>
                <Button style="@style/NoteButton" android:id="@+id/btnGs" android:text="G#"/>
                <Button style="@style/NoteButton" android:id="@+id/btnA"  android:text="A"/>
                <Button style="@style/NoteButton" android:id="@+id/btnAs" android:text="A#"/>
                <Button style="@style/NoteButton" android:id="@+id/btnB"  android:text="B"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- CONTROLS (RIGHT SIDE) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:elevation="30dp"

                android:text="●"
                android:textSize="20sp"
                android:textColor="#FF5252"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:text="▶"
                android:textSize="20sp"
                android:textColor="#81C784"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnDemo"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:text="♪"
                android:textSize="20sp"
                android:textColor="#9575CD"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>
    <!-- WHITE KEYS -->
    <LinearLayout
        android:id="@+id/whiteKeys"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:orientation="horizontal"
        android:weightSum="14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp">

        <Button android:id="@+id/key_c"  style="@style/WhiteKey" android:text="C"/>
        <Button android:id="@+id/key_d"  style="@style/WhiteKey" android:text="D"/>
        <Button android:id="@+id/key_e"  style="@style/WhiteKey" android:text="E"/>
        <Button android:id="@+id/key_f"  style="@style/WhiteKey" android:text="F"/>
        <Button android:id="@+id/key_g"  style="@style/WhiteKey" android:text="G"/>
        <Button android:id="@+id/key_a"  style="@style/WhiteKey" android:text="A"/>
        <Button android:id="@+id/key_b"  style="@style/WhiteKey" android:text="B"/>

        <Button android:id="@+id/key_c2" style="@style/WhiteKey" android:text="C2"/>
        <Button android:id="@+id/key_d2" style="@style/WhiteKey" android:text="D2"/>
        <Button android:id="@+id/key_e2" style="@style/WhiteKey" android:text="E2"/>
        <Button android:id="@+id/key_f2" style="@style/WhiteKey" android:text="F2"/>
        <Button android:id="@+id/key_g2" style="@style/WhiteKey" android:text="G2"/>
        <Button android:id="@+id/key_a2" style="@style/WhiteKey" android:text="A2"/>
        <Button android:id="@+id/key_b2" style="@style/WhiteKey" android:text="B2"/>
    </LinearLayout>

    <!-- GUIDELINES -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.14"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.28"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.57"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"/>
    <!-- BLACK KEYS -->
    <Button android:id="@+id/key_cs"  style="@style/BlackKey" android:text="C#"
        app:layout_constraintStart_toStartOf="@id/g1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_ds"  style="@style/BlackKey" android:text="D#"
        app:layout_constraintStart_toStartOf="@id/g2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_fs"  style="@style/BlackKey" android:text="F#"
        app:layout_constraintStart_toStartOf="@id/g3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_gs"  style="@style/BlackKey" android:text="G#"
        app:layout_constraintStart_toStartOf="@id/g4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_as"  style="@style/BlackKey" android:text="A#"
        app:layout_constraintStart_toStartOf="@id/g5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_cs2" style="@style/BlackKey" android:text="C#2"
        app:layout_constraintStart_toStartOf="@id/g6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_ds2" style="@style/BlackKey" android:text="D#2"
        app:layout_constraintStart_toStartOf="@id/g7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_fs2" style="@style/BlackKey" android:text="F#2"
        app:layout_constraintStart_toStartOf="@id/g8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_gs2" style="@style/BlackKey" android:text="G#2"
        app:layout_constraintStart_toStartOf="@id/g9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>

    <Button android:id="@+id/key_as2" style="@style/BlackKey" android:text="A#2"
        app:layout_constraintStart_toStartOf="@id/g10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/whiteKeys"/>


</androidx.constraintlayout.widget.ConstraintLayout>
