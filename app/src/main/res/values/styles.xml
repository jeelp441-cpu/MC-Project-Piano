<?xml version="1.0" encoding="utf-8"?>
<resources> <style name="WhiteKey">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>

    <item name="android:background">@drawable/white_key_bg</item>
    <item name="android:elevation">6dp</item>
    <item name="android:layout_margin">0.5dp</item>

    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>

    <!-- TEXT -->
    <item name="android:textColor">#000000</item> <!-- FIXED -->
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">bottom|center_horizontal</item>
    <item name="android:paddingBottom">14dp</item>
</style>

    <!-- BLACK KEY -->
    <style name="BlackKey">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">160dp</item>

        <item name="android:background">@drawable/black_key_bg</item>
        <item name="android:elevation">15dp</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

        <!-- TEXT -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="NoteButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">36dp</item>

        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>

        <item name="android:background">@drawable/note_btn_bg</item>

        <item name="android:textColor">#E8F5E9</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>



</resources>