<?xml version="1.0" encoding="utf-8"?>
<resources><style name="WhiteKey">
    <!-- Size -->
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">300dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/white_key_bg</item>
    <item name="android:elevation">6dp</item>
    <item name="android:layout_margin">0.5dp</item>



    <!-- Text (if any) -->
    <item name="android:textColor">#424242</item>
    <item name="android:textSize">10sp</item>
</style>

    <style name="BlackKey">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:background">@drawable/black_key_bg</item>
        <item name="android:elevation">15dp</item>
    </style>
    <style name="NoteButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">#2A2A2A</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">4dp</item>
    </style>


</resources>