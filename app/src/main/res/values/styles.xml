<?xml version="1.0" encoding="utf-8"?>
<resources><style name="WhiteKey">
    <!-- Size -->
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">300dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/white_key_bg</item>
    <item name="android:elevation">6dp</item>
    <item name="android:layout_margin">0.5dp</item>



    <!-- Text (if any) -->
    <item name="android:textColor">#424242</item>
    <item name="android:textSize">10sp</item>
</style>

    <style name="BlackKey">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:background">@drawable/black_key_bg</item>
        <item name="android:elevation">15dp</item>
    </style>
    <style name="NoteButton">
        <!-- Size -->
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">36dp</item>

        <!-- Spacing -->
        <item name="android:layout_marginEnd">6dp</item>

        <!-- Text -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>



        <!-- Touch feedback -->
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


</resources>