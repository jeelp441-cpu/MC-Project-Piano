<?xml version="1.0" encoding="utf-8"?>
<resources><style name="WhiteKey">

    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">300dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/white_key_bg</item>
    <item name="android:elevation">6dp</item>
    <item name="android:layout_margin">0.5dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:textColor">#424242</item>
    <item name="android:textSize">10sp</item>
</style>

    <style name="BlackKey">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:background">@drawable/black_key_bg</item>
        <item name="android:elevation">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="NoteButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">36dp</item>

        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>

        <item name="android:background">@drawable/note_btn_bg</item>

        <item name="android:textColor">#E8F5E9</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>



</resources>