<?xml version="1.0" encoding="utf-8"?>
<resources><style name="WhiteKey">
    <!-- Size -->
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">300dp</item>
    <item name="android:layout_weight">1</item>

    <!-- Look -->
    <item name="android:background">@drawable/white_key_bg</item>

    <!-- Depth -->
    <item name="android:elevation">5dp</item>

    <!-- Spacing -->
    <item name="android:layout_margin">0.5dp</item>

    <!-- Remove default ripple -->
    <item name="android:foreground">@null</item>
    <item name="android:stateListAnimator">@null</item>

    <!-- Text (if any) -->
    <item name="android:textColor">#424242</item>
    <item name="android:textSize">10sp</item>
</style>

    <style name="BlackKey">
        <style name="BlackKey">
            <!-- Size (real piano ratio) -->
            <item name="android:layout_width">36dp</item>
            <item name="android:layout_height">180dp</item>

            <!-- Look -->
            <item name="android:background">@drawable/black_key_bg</item>

            <!-- Floating effect -->
            <item name="android:elevation">14dp</item>

            <!-- Remove ripple -->
            <item name="android:foreground">@null</item>
            <item name="android:stateListAnimator">@null</item>

            <!-- No text -->
            <item name="android:textColor">@android:color/transparent</item>
        </style>

    </style>


</resources>